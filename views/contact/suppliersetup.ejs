<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %>
  </head>
  <body>
    <!-- Start Homepage section-->
    <div class="wrapper">
      
      <!-- Sidebar -->
      <% include ../partial/sidebar %>
       <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">

        <!--Button for sidebar toggle-->
        <button class="btn" type="button" data-bs-theme="dark">
          <span class="navbar-toggler-icon"></span>
        </button>
        <% include ../partial/account %>
        </nav>
        <main class="content px-3 py-2">

          <div class="container-fluid">
            <div class="mb-3">
              <h1>Supplier Setup</h1>
              <div class="container-fluid mt-3 " id="supplier">
                <div class="row">
                  <div class="col-lg-4 col-md-2 col-sm-12"> </div>
                  <div class="col-lg-4 col-md-8 col-sm-12 "   >
                    <div class="container mt-3" >
                        <form action="/contact/suppliersetup" method="post">
                          <div class="card bg-info" style= "margin: auto;" >
                          <div class="mb-3 mt-3"  style="margin: 10px;">
                            <label for="Sname">Supplier Name</label>
                            <input type="text" class="form-control" id="Sname" placeholder="" name="Sname" required>
                          </div>
                          <div class="mb-3"  style="margin: 10px;">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="" name="email" required>
                          </div>

                          <div class="mb-3"  style="margin: 10px;">
                            <label for="phone">Phone</label>
                            <input type="text" class="form-control" id="phone" placeholder="" name="phone" required>
                          </div>

                          <div class="mb-3"  style="margin: 10px;">
                            <label for="Cname">Company Name</label>
                            <input type="text" class="form-control" id="Cname" placeholder="" name="Cname" required>
                          </div>
                          <div class="mb-3"  style="margin: 10px;">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="" name="address" required>
                          </div>
                          <button type="submit" class="btn btn-primary"  style="margin: 10px;">Add</button><br/>
                          </div>
                        </form>
                      </div><br/>
        
                  </div>
               
                  <div class="col-lg-12">
                    <div class="table-responsive " >
                        <table class="table table-bordered table-info ">
                          <thead>
                            <tr class="text-center" >
                              <th>No</th>
                              <th>Supplier Name</th>
                              <th>Email</th>
                              <th>Phone</th>
                              <th>Company Name</th>
                              <th>Address</th>
                              <th>Action</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for(var i=0; i < suppliers.length; i++){%>
                            <tr>
                              <td><%= i+1 %></td>
                              <td><%= suppliers[i].supplierName %></td>
                              <td><%= suppliers[i].email %></td>
                              <td><%= suppliers[i].phone %></td>
                              <td><%= suppliers[i].companyName %></td>
                              <td><%= suppliers[i].address %></td>
                              <td>
                               
                                <button type="button" onclick="modFun('<%= suppliers[i]._id %>', '<%= suppliers[i].supplierName %>','<%= suppliers[i].email %>','<%= suppliers[i].phone %>','<%= suppliers[i].companyName %>','<%= suppliers[i].address %>')" class="btn btn-warning btn-sm">Modify</button>
                                <button type="button" onclick="delFun('<%= suppliers[i]._id %>')" class="btn btn-danger btn-sm">Delete</button></td>
                            </tr>  
                        <% } %> 
                  </tbody>
                </table>
              </div>
            </div>
        </div>
       </div>
      </div>
               </div>
          </div>
        </main>
       </div>
    </div>  
    
    <div class="modal" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
    
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Update Supplier</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
    
          <!-- Modal body -->
          <div class="modal-body">
            <div class="container mt-3" >
              <form action="/contact/supplierupdate" method="post">
                <input type="hidden" name="id" id="id" />
                <div class="card bg-info" style= "margin: auto;" >
                <div class="mb-3 mt-3"  style="margin: 10px;">
                  <label for="uSname">Supplier Name</label>
                  <input type="text" class="form-control" id="uSname" placeholder="" name="uSname" required>
                </div>
                <div class="mb-3"  style="margin: 10px;">
                  <label for="uemail">Email</label>
                  <input type="text" class="form-control" id="uemail" placeholder="" name="uemail" required>
                </div>

                <div class="mb-3"  style="margin: 10px;">
                  <label for="uphone">Phone</label>
                  <input type="text" class="form-control" id="uphone" placeholder="" name="uphone" required>
                </div>

                <div class="mb-3"  style="margin: 10px;">
                  <label for="uCname">Company Name</label>
                  <input type="text" class="form-control" id="uCname" placeholder="" name="uCname" required>
                </div>
                <div class="mb-3"  style="margin: 10px;">
                  <label for="uaddress">Address</label>
                  <input type="text" class="form-control" id="uaddress" placeholder="" name="uaddress" required>
                </div>
                <button type="submit" class="btn btn-primary"  style="margin: 10px;">Update</button><br/>
                </div>
              </form>
            </div>
          </div>
    
          <!-- Modal footer -->
          
    
        </div>
      </div>
    </div>
  </body>

  <% include ../partial/script %>
  <script>
    function modFun(id,name,email,phone,cname,address){
      var myModal = new bootstrap.Modal(document.getElementById("myModal"),{});
      myModal.show();
      $("#id").val(id);
      $("#uSname").val(name);
      $("#uemail").val(email);
      $("#uphone").val(phone);
      $("#uCname").val(cname);
      $("#uaddress").val(address);
    }
    function delFun(id){
      var opt = confirm("Are you sure for delete?");
      if(opt) location.href = "/contact/supplierdelete/" + id;
    }

    

    


    

    


  </script>
</html>
